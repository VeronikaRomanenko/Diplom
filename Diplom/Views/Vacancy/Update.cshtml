@model Vacancy

<div class="my-form">
    <form asp-action="Update" asp-route-id="@Model.Id" class="form-horizontal text-center">
        <span class="heading">Редактирование вакансии</span>
        <div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Title" placeholder="Название" />
                <span asp-for="Title" />
            </div>
            <div class="form-group">
                <textarea class="form-control" asp-for="Description" id="Description" placeholder="Описание"></textarea>
            </div>
            <div class="form-group">
                <label for="StartDate" class="form-label">Дата открытия</label>
                <input class="form-control" type="date" asp-for="StartDate" id="StartDate" />
            </div>
            <div class="form-group">
                @foreach (Discipline d in ViewBag.Disciplines)
                {
                    <div class="form-check">
                        <input value="@d.Id" name="selectedDisciplines" @(Model.Disciplines.Contains(d) ? "checked=\"checked\"" : "") class="form-check-input" type="checkbox" id="defaultCheck_@d.Id">
                        <label class="form-check-label" for="defaultCheck_@d.Id">
                            @d.Title
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Отмена</a>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>
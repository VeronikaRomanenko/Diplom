@model Position

<div class="my-form">
    <form asp-action="Create" class="form-horizontal text-center">
        <span class="heading">Добавление должности</span>
        <div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Title" placeholder="Название" />
                <span asp-for="Title" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.IdDepartment, ViewBag.Departments as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Отмена</a>
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </form>
</div>
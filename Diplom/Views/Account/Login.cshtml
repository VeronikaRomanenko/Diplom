@{
    Layout = null;
}
@model Diplom.ViewModels.LoginModel
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/my_styles.css" />

<html>
    <head>
        <title>Login Page</title>
    </head>
    <body>
        <div class="my-form">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="text-center">
                <span class="heading">ВХОД</span>
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div>
                    <div class="form-group">
                        <input type="text" asp-for="Login" placeholder="Логин" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" placeholder="Пароль" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>
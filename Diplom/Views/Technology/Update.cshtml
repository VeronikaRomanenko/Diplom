@model Technology

<div class="my-form">
    <form asp-action="Update" asp-route-id="@Model.Id" class="form-horizontal text-center">
        <span class="heading">Редактирование технологии</span>
        <div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Title" placeholder="Название" />
                <span asp-for="Title" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Отмена</a>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>
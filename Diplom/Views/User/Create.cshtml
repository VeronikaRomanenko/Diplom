@model User

<div class="my-form">
    <form asp-action="Create" class="form-horizontal text-center">
        <span class="heading">Добавление пользователя</span>
        <div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Login" placeholder="Название" />
                <span asp-for="Title" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Password" placeholder="Пароль" />
                <span asp-for="Title" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Email" placeholder="Email" />
                <span asp-for="Title" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.IdRole, ViewBag.Roles as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Отмена</a>
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </form>
</div>
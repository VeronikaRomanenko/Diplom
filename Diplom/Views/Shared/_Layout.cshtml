<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diplom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/my_styles.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Diplom</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div class="mr-5">
                    <span>@User.Identity.Name</span>
                    @Html.ActionLink("Выход", "Logout", "Account", new { area = "" }, new { @class = "btn btn-outline-secondary ml-3" })
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row panel">
            <div class="col-md-4">
                @Html.ActionLink("Вакансии", "Index", "Vacancy", null, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Люди", "Index", "Person", null, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Должности", "Index", "Position", null, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Департаменты", "Index", "Department", null, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Дисциплины", "Index", "Discipline", null, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Технологии", "Index", "Technology", null, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Пользователи", "Index", "User", null, new { @class = "btn btn-block btn-default btn-lg" })
            </div>
            <div class="col-md-8">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Diplom - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<Person>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Фамилия</th>
            <th scope="col">Имя</th>
            <th scope="col">Статус</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td> @person.Surname </td>
                <td> @person.Name </td>
                <td> @person.Status.Title </td>
                <td class="float-right">
                    <a asp-action="Details" asp-route-id="@person.Id" class="btn btn-outline-primary">Подробнее</a>
                    <a asp-action="Update" asp-route-id="@person.Id" class="btn btn-outline-primary">Редактировать</a>
                    <a asp-action="Remove" asp-route-id="@person.Id" class="btn btn-outline-primary">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
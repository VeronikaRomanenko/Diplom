@model Person

<div class="my-form">
    <form asp-action="Create" class="form-horizontal text-center">
        <span class="heading">Добавление дисциплины</span>
        <div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Surname" placeholder="Фамилия" />
                <span asp-for="Surname" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Name" placeholder="Имя" />
                <span asp-for="Name" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Patronymic" placeholder="Отчество" />
                <span asp-for="Patronymic" />
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Отмена</a>
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </form>
</div>